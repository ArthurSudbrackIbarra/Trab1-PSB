{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "mingw32-make -f Makefile.mk"
            },
            "linux": {
                "command": "make"
            },
            "osx": {
                "command": "make"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "mingw32-make -f Makefile.mk clean"
            },
            "linux": {
                "command": "make clean"
            },
            "osx": {
                "command": "make clean"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
